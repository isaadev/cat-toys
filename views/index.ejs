<% layout('layouts/boilerplate')%>

    <div class="mt-5 mb-5 text-center" id="header">
        <h4><strong>Get your Cat Toys!</strong></h4>
        <p class="text-muted">Entertain your loved feline with some simple toys! </p>
    </div>
    <div class="jumbotron vertical-center">
        <div class="container text-center">
            <div class="row justify-content-center">
                <% for (let i=0; i <=2; i++) { %>
                <div class="col-md-4 col-md-offset-2">
                    <a href="/<%= products[i]._id %>">
                        <div class="card shadow" style="width: 70%;" id="floatthis">
                            <img src="<%= products[i].image %>" class="card-img-top" alt="<%=products[i].name%>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= products[i].name %>
                                </h5>
                                <p class="card-text mb-3">
                                    <%= products[i].description %>
                                </p>
                                <h5 id="price">$<%=products[i].price %></h5>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
                    <div class="row justify-content-center">
                        <% for (let i=3; i <=5; i++) { %>
                        <div class="col-md-4 col-md-offset-2">
                            <a href="/<%= products[i]._id %>">
                                <div class="card shadow" style="width: 70%;" id="floatthis">
                                    <img src="<%= products[i].image %>" class="card-img-top" alt="<%=products[i].name%>">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= products[i].name %>
                                        </h5>
                                        <p class="card-text mb-3">
                                            <%= products[i].description %>
                                        </p>
                                        <h5 id="price">$<%=products[i].price %></h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% } %>


        <footer class="mt-auto text-muted">
            <p>&copy; 2022</p>
        </footer>
