<% layout('layouts/boilerplate')%>

<div class="card mt-5 mb-3" style="max-width:800px;">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
            <img src="<%= product.image %>" class="img-fluid rounded-start shadow" alt="...">
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card-body">
                <h2 class="card-title"><%=product.name %></h2>
                <p class="card-text"><%= product.description %></p>
                <h2>$<%= product.price%></h2>
                <form action="" class="mt-5 ml-3">
                    <!-- <label for="qty">Qty:</label><br>
                    <input type="number" id="qty" name="qty" placeholder="1" min="1" max="100" class="mt-3 mb-3"> -->
                    <a href="/add-to-cart/<%=product._id%>" class="btn btn-lg form-control ml-3">Add to cart <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus"
                        viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg></a>
                </form>
                
                <a href="/" class="btn btn-md form-control mt-3" id="back"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg> Back to Products</a>
            </div>
            
        </div> 
    </div>
</div>
