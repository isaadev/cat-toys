<% layout('layouts/boilerplate')%>

    <div class="container">
        <div class="row justify-content-center">

            <div class="col-md-4 col-md-offset-2 mt-5">
                <div class="card shadow" style="width: 70%;">
                    <div class="card-body">
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <h5 class="card-title text-center">
                                Login
                            </h5>

                            <div class="mb-3">
                                <label for="username" class="form-label">Username:</label>
                                <input type="text" class="form-control" id="username" aria-describedby="username" name="username" required>
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="d-flex justify-content-center">
                                <button class="btn text-center">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>